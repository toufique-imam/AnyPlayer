<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnyPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/DodgerBlue</item>
        <item name="colorPrimaryVariant">@color/MidnightBlue</item>
        <item name="colorOnPrimary">@color/Navy</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/CornflowerBlue</item>
        <item name="colorSecondaryVariant">@color/CadetBlue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="fontFamily">@font/araboto_normal</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

